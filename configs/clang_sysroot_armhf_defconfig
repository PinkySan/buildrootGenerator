# Zielarchitektur: ARM 32-bit mit Hard Float ABI
BR2_arm=y
BR2_ARM_EABIHF=y
BR2_ARM_FPU_VFPV3=y
BR2_GCC_TARGET_ABI="hf"

# Verwende Clang (Host) + Buildroot glibc Sysroot
BR2_TOOLCHAIN_BUILDROOT=y
BR2_TOOLCHAIN_BUILDROOT_USE_CLANG=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y


# Development-Dateien für Sysroot
BR2_DEVELOPMENT_FILES=y
BR2_STATIC_LIBS=y
BR2_ENABLE_DEBUG=n
BR2_DEBUG_SYM_LINK=n
BR2_STRIP_strip=y

# Systemkonfiguration
BR2_TARGET_GENERIC_GETTY_PORT="ttyAMA0"
BR2_SYSTEM_DEFAULT_PATH="/bin:/sbin:/usr/bin:/usr/sbin"

# BusyBox (Shell etc.)
BR2_PACKAGE_BUSYBOX=y

# SSH-Server: OpenSSH
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_OPENSSH_CLIENT=y
BR2_PACKAGE_OPENSSH_SERVER=y
BR2_PACKAGE_OPENSSH_KEY_UTILS=y

# RootFS: nur tar
BR2_TARGET_ROOTFS_TAR=y

# Tools und Header für Cross-Compiling mit Clang
BR2_PACKAGE_PKGCONF=y        
BR2_PACKAGE_LIBC_DEVFILES=y
